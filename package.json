{
  "name": "npm-scripts",
  "version": "1.1.0",
  "description": "npm scripts workflow",
  "main": "index.js",
  "config": {
    "port": 9527
  },
  "scripts": {
    "lint:js": "eslint src/*.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:style": "stylelint src/*.{less,css}",
    "lint:json": "jsonlint --quiet src/*.json",
    "lint:md": "markdownlint src/*.md",
    "lint": "npm-run-all --parallel lint:*",
    "test": "cross-env NODE_ENV=test mocha tests/",
    "cover": "scripty",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "cover-win": "node scripts/cover.js",
    "cover-win:serve": "node scripts/cover/serve.js",
    "cover-win:open": "node scripts/cover/open.js",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.{less,css}\" \"**/*.json\" \"**/*.md\" -- npm run lint",
    "watch:test": "npm t -- --watch",
    "watch": "npm-run-all --parallel watch:*",
    "client": "npm-run-all --parallel client:*",
    "client:reload-server": "livereload client/ --debug",
    "client:static-server": "http-server client/",
    "prepare": "husky",
    "prebuild": "rm -rf dist && mkdir -p dist/{images,styles,scripts}",
    "build": "scripty",
    "build:images": "scripty",
    "build:styles": "scripty",
    "build:scripts": "scripty",
    "build:hash": "scripty",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags"
  },
  "lint-staged": {
    "src/*.js": "eslint",
    "src/*.{less,css}": "stylelint",
    "src/*.json": "jsonlint",
    "src/*.md": "markdownlint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsulaosi/npm-scripts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hsulaosi/npm-scripts/issues"
  },
  "homepage": "https://github.com/hsulaosi/npm-scripts#readme",
  "devDependencies": {
    "chai": "4.3.10",
    "chalk": "4.1.2",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "cssmin": "^0.4.3",
    "eslint": "^8.57.0",
    "hashmark": "^5.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "imagemin-cli": "^7.0.0",
    "jsonlint": "^1.6.3",
    "less": "^4.2.0",
    "lint-staged": "^15.2.2",
    "livereload": "0.9.2",
    "make-dir-cli": "^3.1.0",
    "markdownlint-cli": "^0.39.0",
    "mocha": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "onchange": "^7.1.0",
    "open-cli": "7.2.0",
    "replaceinfiles": "^1.1.4",
    "rimraf": "^5.0.5",
    "scripty": "^2.1.1",
    "shelljs": "^0.8.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "uglify-es": "^3.3.9"
  }
}
